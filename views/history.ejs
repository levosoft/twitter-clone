<%- include('header') %>
  <body>
    <%- include('navbarUser') %>
    <div class="container mt-4">
        <div class="pagecontent">
            
            <div class="row">
              <div class="col-12">
                  <div class="row">
                      <% for (let i = 0; i < tweets.length ;i++){ %>
                        <div class="col-md-12">
                          <div class="card mb-3">
                              
                            <div class="card-header">
                              <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                  <img src="/images/avatars/<%= tweets[i].user.avatar %>.png" width="60" height="60" class="rounded-circle">
                                  <div class="ml-3">
                                    <p class="card-text"><%= tweets[i].user.name.nickName %></p>
                                  </div>
                                </div>
                                <div class="d-flex align-items-center flex-grow-1">
                                  <h5 class="card-title text-center w-100"><%= tweets[i].title %></h5>
                                  <p class="card-text"><%= tweets[i].date %></p>
                                </div>
                              </div>
                            </div>                                                                                 

                            <div class="card-body">
                              <p class="card-text"><%= tweets[i].text %></p>                              
                            </div>
                           
                            <% if (tweets[i].isCurrentUserTweet) { %>
                              <div class="card-footer text-center text-muted">                              
                                  <div class="d-flex justify-content-center">
                                    <a href="/tweet/edit/<%= tweets[i].id %>" class="btn btn-primary btn-sm" style="opacity: 60%;"><i class="fas fa-edit"></i></a>
                                    <a href="/tweet/delete/<%= tweets[i].id %>" class="btn btn-danger btn-sm delete" style="opacity: 60%;"><i class="fas fa-trash-alt"></i></a>
                                  </div>
                              </div>
                            <% } %>

                          </div>
                        </div>
                      <% } %>
                  </div>
              </div>
            </div>
        </div>
    </div>
  </body>
</html>

<script>
  $(document).ready(function() {
    $(".delete").click(function(e) {
      e.preventDefault();
  
      var confirmation = confirm("Biztosan törlöd a bejegyzést?");
  
      if (confirmation) {
        var deleteUrl = $(this).attr("href");
        window.location.href = deleteUrl; 
      }
    });
  });
</script>